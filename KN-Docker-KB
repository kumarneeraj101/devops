#KN-Docker-KB


docker images
docker search
docker pull
docker run -it --name kn_container ubuntu /bin/bash
service docker status
docker start kn_container
docker attach kn_container
docker ps -a 
docker ps 
docker stop kn_container
docker rm kn_container


#To see all images present in my KN local machine
docker image

#To find out images in docker hub
 docker search Jenkins

#To download image from dockerhub to local machine
docker pull jenkins

#To give name to container
docker run -it --name kn-docker-container ubuntu /bin/bash

#To check service is started ot not
service docker status

#To starrt container
docker start kn-docker-container 

# To go inside container
 docker atttach kn-docker-container 

# To see all container
 docker ps
# To stop container
 docker stop kn-docker-container 

#To delete container
 docker rm kn-docker-container 
